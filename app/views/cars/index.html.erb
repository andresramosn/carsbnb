
<div class="container">
  <% if Car.search_by_address(params[:query]).count > 1 %>
    <h1 id="h1-results"><%= Car.search_by_address(params[:query]).count %> cars found</h1>
  <% elsif Car.search_by_address(params[:query]).count == 1 %>
    <h1 id="h1-results"><%= Car.search_by_address(params[:query]).count %> car found</h1>
  <% else %>
    <h1 id="h1-results"> No cars where found please try another location</h1>
  <% end %>
  <div class="row">
      <% @cars.each do |car| %>
        <div class="col-xs-12 col-md-4 m-0 p-0">
            <%= link_to car_path(car) do %>
            <div class="car-card">
              <%= cl_image_tag car.photo, class: "card-photo" %>
              <div class="card-info">
                <p><%= car.brand %>  <%= car.model %></p>
                <p>â‚¬ <%= car.price %> / day</p>
              </div>
            </div>
            <% end %>
        </div>
    <% end %>
  </div>
</div>

<div
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
