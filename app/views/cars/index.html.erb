<div class="container">
  <div class="row">
    <div class="col-12 col-md-8">
      <h1 id="h1-results"><%= Car.search_by_address(params[:query]).count %> cars found</h1>
      <div class="row">
          <% @cars.each do |car| %>
            <div class="col-12 col-md-6 m-0 p-0">
              <%= link_to car_path(car) do %>
                <div class="car-card m-2 p-2">
                  <%= cl_image_tag car.photo, class: "card-photo" %>
                  <div class="card-info">
                    <p><%= car.brand %>  <%= car.model %></p>
                    <p>â‚¬ <%= car.price %> / day</p>
                  </div>
                </div>
              <% end %>
            </div>
        <% end %>
      </div>
    </div>

    <div class="col-md-4 mt-5">
      <div
        id="map"
        style="width: 90%; height: 500px; border-radius: 4px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
