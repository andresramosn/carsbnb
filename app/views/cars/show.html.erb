<div class="container">
  <div class="row justify-content-center">
    <div class="card-trip col-8 border pt-1">
      <div class="d-flex justify-content-between" >
        <div class="mt-3">
          <h2><%= @car.brand %>-<%= @car.model %></h2>
          <p><%= @car.address %></p>
          <p><%= @car.description %></p>
        </div>
        <div>
          <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered m-2" />
        </div>
      </div>
        <%= cl_image_tag @car.photo %>
    </div>
    <div class="pl-3 col-4">
      <div class="border p-2">
        <div class="d-flex justify-content-between p-2">
          <p id="price"><%= @car.price %>€/day</p>
          <%= link_to "Book", cars_path, class: "main-cta" %>
        </div>

        <div class="d-flex justify-content-between p-2">
          <%= simple_form_for([@car, @reservation])  do |c| %>
        <div class="form-inputs">
          <%= c.input :start_date %>
          <%= c.input :end_date %>

       </div>

      <div class="form-actions">
       <button class="button-form"><%= c.button :submit, "Submit" %></button>
        </div>

      <% end %>

        <div class="d-flex justify-content-between p-2">
          <p style="font-size:20px;">Total:</p>
          <p style="font-size:20px;">90€</p>
        </div>
      </div>
    <div
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
    </div>
  </div>

  <br>
  <%= link_to "Back to all cars", cars_path %>
</div>





