<div class="container">
  <div class="row justify-content-center">
    <div class="card-trip col-8 border pt-1">
      <div class="d-flex justify-content-between" >
        <div class="mt-3">
          <h2><%= @car.brand %> - <%= @car.model %></h2>
          <p><%= @car.address %></p>
          <p><%= @car.description %></p>
        </div>
      </div>
      <%= cl_image_tag @car.photo %>
    </div>
  <div class="pl-3 col-4">
    <div class="border p-2">
      <div class="d-flex justify-content-between p-2">
        <p id="price">Book this <%= @car.brand %> for <%= @car.price %>â‚¬/day</p>
      </div>

      <div class="d-flex justify-content-between p-2">
        <%= simple_form_for([@car, @reservation])  do |c| %>
        <div class="form-inputs pt-0">
          <%= c.input :start_date %>
          <%= c.input :end_date %>
        </div>
        <div class="form-actions">
         <%= c.button :submit, "Book now", class: "main-cta mb-3"  %>
       </div>
       <% end %>
      </div>
      <div>
        <p class="pt-3" style="font-size:20px;">Car location</p>
      </div>
      <div
        id="map"
        style="width: 100%;
        height: 300px;
        border-radius: 4px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
<br>
<p class="text-left" style="font-size:18px;"><%= link_to "Back to all cars", cars_path %></p>
</div>


<% # update %>



