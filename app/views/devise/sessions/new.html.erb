<!-- div.container>div.row.justify-content-center>div.col-xs-12.col.md-4 -->
<div class="container" style="min-height: 75vh;">
  <div class="row justify-content-center">
    <div class="col-xs-12 col md-4">
      <h2 class="text-center">Enter your account</h2>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto form p-4">
            <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

            <div class="form-actions">
              <%= f.button :submit, "Log in", class: "main-cta-login1" %>
            </div>

            <% end %>

              <!-- here in the div below we will need in the future to create two links one next to the other -->
            <div>
              <p><%= render "devise/shared/links", class: "link" %></p>
            </div>

      </div>
    </div>
  </div>
</div>
